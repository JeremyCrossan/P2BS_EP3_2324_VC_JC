<mvc:View
    controllerName="flexso.controller.EventManager"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
>
    
        <m:Page id="app"
            title="Create Event"
            showNavButton="true"
            navButtonPress=".onNavBack"
        >
            <m:content>
                <m:VBox id="_IDGenVBox1">
                    
                    <f:SimpleForm
                        id="eventForm"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        title="New Event"
                    >
                        <f:content>
                            <m:Label id="_IDGenLabel1" text="Name"/>
                            <m:Input id="_IDGenInput1" value="{/newEvent/naam}"/>

                            <m:Label id="_IDGenLabel2" text="Description"/>
                            <m:Input id="_IDGenInput2" value="{/newEvent/beschrijving}"/>

                            <m:Label id="_IDGenLabel3" text="Date"/>
                            <m:DatePicker id="_IDGenDatePicker1" value="{/newEvent/datum}"/>

                            <m:Label id="_IDGenLabel4" text="Location"/>
                            <m:Input id="_IDGenInput3" value="{/newEvent/locatie}"/>
                        </f:content>
                    </f:SimpleForm>
            
                    <m:Table
                        id="sessionsTable"
                        headerText="Sessions"
                        mode="Delete"
                        items="{/newEvent/sessions}"
                        delete=".onDeleteSession"
                    >
                        <m:columns>
                            <m:Column id="_IDGenColumn1">
                                <m:Text id="_IDGenText1" text="Name"/>
                            </m:Column>
                            <m:Column id="_IDGenColumn2">
                                <m:Text id="_IDGenText2" text="Description"/>
                            </m:Column>
                            <m:Column id="_IDGenColumn3">
                                <m:Text id="_IDGenText3" text="Speaker"/>
                            </m:Column>
                            <m:Column id="_IDGenColumn4">
                                <m:Text id="_IDGenText4" text="Date"/>
                            </m:Column>
                            <m:Column id="_IDGenColumn5">
                                <m:Text id="_IDGenText5" text="Room"/>
                            </m:Column>
                        </m:columns>
                        <m:items>
                            <m:ColumnListItem id="_IDGenColumnListItem1">
                                <m:cells>
                                    <m:Input id="_IDGenInput4" value="{naam}" editable="true"/>
                                    <m:Input id="_IDGenInput5" value="{beschrijving}" editable="true"/>
                                    <m:Input id="_IDGenInput6" value="{spreker}" editable="true"/>
                                    <m:DatePicker id="_IDGenDatePicker2" value="{datum}" editable="true"/>
                                    <m:Input id="_IDGenInput7" value="{lokaalnummer}" editable="true"/>
                                </m:cells>
                            </m:ColumnListItem>
                        </m:items>
                    </m:Table>

                    <m:HBox id="_IDGenHBox1">
                        <m:Button id="_IDGenButton1"
                            text="Add session"
                            press=".onAddSession"
                        />
                        <m:Button id="_IDGenButton2"
                            text="Save Event"
                            press=".onSaveEvent"
                        />
                    </m:HBox>
                </m:VBox>
            </m:content>
        </m:Page>
    
</mvc:View>
