<mvc:View controllerName="flexso.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">

    <App id="Startpage">
        <Page id="frontPage" title="The networking hub - Connecting interests into meaningfull relationships">
           <content>
                <HBox id="_IDGenHBox1" 
				justifyContent="SpaceAround"
				class="sapUiLargeMarginTop sapUiLargeMarginBottom">
					<VBox id="_IDGenVBox1" layoutData="{ growFactor: 1 }">
                    <Text id="_IDGenText11" 
					text="Lorem ipsum bla bla bla Lorem ipsum bla bla bla Lorem ipsum bla bla bla Lorem ipsum bla bla bla Lorem ipsum bla bla bla Lorem ipsum bla bla bla Lorem ipsum bla bla bla" />
					</VBox>
					<VBox id="_IDGenVBox2" layoutData="{ growFactor: 1 }">
					<Image id="_IDGenImage1" src="/P2BS_2324_VC/domein model.jpg"
                               width="auto" 
                               alt="Placeholder image" />
                    
					</VBox>
					</HBox>
		    <Table
                id="EventsTable"
                inset="false"
                items="{path: '/Events'}">

                <!-- Kolommen DefiniÃ«ren -->
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Event ID" />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text id="_IDGenText2" text="Naam" />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text id="_IDGenText3" text="Beschrijving" />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Text id="_IDGenText4" text="Datum" />
                    </Column>
					<Column id="_IDGenColumn5">
                        <Text id="_IDGenText5" text="Locatie" />
                    </Column>
                </columns>

                <!-- Items in de Tabel -->
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1" press="onEventClick">
                        <cells>
                            <Text id="_IDGenText6" text="{eventID}" />
                            <Text id="_IDGenText7" text="{naam}" />
                            <Text id="_IDGenText8" text="{beschrijving}" />
                            <Text id="_IDGenText9" text="{datum}" />
							<Text id="_IDGenText10" text="{locatie}" />
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
		</content>	
        </Page>
    </App>

</mvc:View>