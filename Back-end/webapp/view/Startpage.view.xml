<mvc:View controllerName="flexso.controller.Startpage"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">

	<Page id="frontPage"
		showHeader="true"
		enableScrolling="true" >

        <content>

            <ObjectHeader id="header"
                title="The Networking Hub - Connecting interests into meaningfull relationships"
                icon="sap-icon://calendar"
                intro="Find and join one of our events"
                responsive="true" />


            <TileContainer
                id="container"
                tileDelete="handleTileDelete"
                tiles="{/TileCollection}">
                <StandardTile id="pictureTile"
                    icon="{icon}"
                    type="{type}"
                    number="{number}"
                    numberUnit="{numberUnit}"
                    title="{title}"
                    info="{info}"
                    infoState="{infoState}" />
            </TileContainer>
            <VBox id="vBox1" class="sapUiLargeMarginTop sapUiLargeMarginBottom">
                <HBox id="hBox1" justifyContent="SpaceBetween" alignItems="Center">
                    <Title id="title" text="Popular Events" level="H2" />
                    <Button id="buttonSeeAll" text="See All" press="onSeeAllEventsPress" />
                </HBox>
                <List id="listPopularEvents" items="{/popularEvents}">
                    <StandardListItem id="listItem1"
                        title="{title}"
                        icon="{icon}"
                        description="{date}"
                        press="onEventPress" />
                </List>
            </VBox>
            
            <Toolbar id="toolbarButton" design="Auto" >
                <ToolbarSpacer id="toolbarEditButton" />
                    <Button id="editButton" text="Edit" press="handleEditPress" />
                    <Button id="busyButton" text="Busy state" press="handleBusyPress" />
                <ToolbarSpacer id="toolbarButtonEmpty" />
            </Toolbar>
            
        </content>
	</Page>
</mvc:View>