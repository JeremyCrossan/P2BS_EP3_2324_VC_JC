<mvc:View controllerName="flexso.controller.Startpage"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="homePage" title="Home">
                    <content> 
                        <!-- Header -->
                        <ObjectHeader title="The networking hub - Connecting interests into meaningfull relationships" 
                                      icon="sap-icon://calendar"
                                      intro="Find and join events near you"
                                      responsive="true" />

                        <!-- Content -->
                        <VBox class="sapUiLargeMarginTop sapUiLargeMarginBottom">
                            <HBox justifyContent="SpaceBetween" alignItems="Center">
                                <Title text="Popular Events" level="H2" />
                                <Button text="See All" press="onSeeAllEventsPress" />
                            </HBox>
                            <List items="{/popularEvents}">
                                <StandardListItem title="{title}" 
                                                  icon="{icon}" 
                                                  description="{date}" 
                                                  press="onEventPress" />
                            </List>
                        </VBox>

                        <!-- More Sections (Upcoming Events) -->

                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
